import { assertThrows } from 'jsr:@std/assert'
import { $, mutation } from './scalars.graphql.api.ts'

let createScalarMutation = () =>
  mutation(m => [
    m.createObject(
      {
        input: {
          content: {
            scalarContent: $('variable'),
          },
        },
      },
      () => []
    ),
  ])

export default [
  () =>
    assertThrows(createScalarMutation, Error, 'Scalar type JSONObject can only be passed as variable'),
]
