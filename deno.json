{
  "name": "@necessary/tgql",
  "version": "0.1.0-dev",
  "description": "TypeScript code generator that creates type-safe GraphQL query builders from GraphQL schemas",
  "license": "MIT OR Apache-2.0",
  "repository": "github:bbqsrc/tgql",
  "keywords": ["graphql", "typescript", "codegen", "type-safe", "query-builder"],
  "exports": {
    ".": "./src/compile.ts",
    "./cli": "./src/cli.ts"
  },
  "tasks": {
    "build": "deno compile --allow-env --allow-read --allow-write --allow-run --unstable-raw-imports --output dist/tgql src/cli.ts",
    "test": "deno test --parallel --unstable-raw-imports --allow-read --allow-net --allow-env --allow-write --allow-run --coverage",
    "test:watch": "deno test --unstable-raw-imports --allow-read --allow-net --allow-env --allow-write --allow-run --watch",
    "regenerate": "deno task regenerate:big-schema && deno task regenerate:small-schema && deno task regenerate:sw-schema && deno task regenerate:country-schema",
    "regenerate:big-schema": "deno run --unstable-raw-imports --allow-read --allow-write --allow-run --allow-net --allow-env src/cli.ts examples/x.graphql --output examples/x.ts",
    "regenerate:small-schema": "deno run --unstable-raw-imports --allow-read --allow-write --allow-run --allow-net --allow-env src/cli.ts examples/zeus.graphql --output examples/zeus.ts",
    "regenerate:sw-schema": "deno run --unstable-raw-imports --allow-read --allow-write --allow-run --allow-net --allow-env src/cli.ts examples/schema-sw.graphql --output examples/api-sw.ts",
    "regenerate:country-schema": "deno run --unstable-raw-imports --allow-read --allow-write --allow-run --allow-net --allow-env src/cli.ts examples/countries-schema.graphql --output examples/countries-schema.ts"
  },
  "exclude": ["*.bad.ts"],
  "compilerOptions": {
    "lib": ["dom", "deno.ns"],
    "strict": true,
    "noImplicitAny": false
  },
  "lint" : {
    "exclude": ["test/*.bad.ts"]
  },
  "test": {
    "include": ["src/**/*.test.ts", "test/**/*.test.ts"]
  },
  "permissions": {
    "read": true,
    "write": true,
    "net": true,
    "env": true,
    "run": ["deno"]
  },
  "publish": {
    "exclude": [
      "examples/",
      "test/",
      "dist/",
      "coverage/",
      "*.test.ts",
      "*.spec.ts"
    ]
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.13",
    "@std/cli": "jsr:@std/cli@^1.0.10",
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/path": "jsr:@std/path@^1.1.1",
    "graphql": "https://esm.sh/graphql@16.11.0?target=deno"
  }
}